@model StocksPortfolio.ViewModels.LoginModel
@{
    ViewData["Title"] = "Login";
}
@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row">
    <div class="col-md-6 col-md-offset-2">
        <form method="post" align="left" asp-antiforgery="true">
            <fieldset>
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Username">Username</label>
                    <div>
                        <input autocomplete="off" autofocus class="form-control" asp-for="Username" type="text" />
                        <span asp-validation-for="Username" class="text-muted"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <div>
                        <input class="form-control" asp-for="Password" type="password" />
                        <span asp-validation-for="Password" class="text-muted"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe" />
                    <span asp-validation-for="RememberMe"></span>                     
                </div>
                <div class="form-group">
                    <button class="btn btn-default" type="submit">Login</button>
                </div>
            </fieldset>
        </form>
    </div>

    <div class="col-md-2 col-md-offset-10" align="left">
        <div class="alert alert-info">
            <h4>Test login</h4>
            <span>Username: <b>admin</b><br /> Password:<b> 12345</b></span>
        </div>    </div>
</div>