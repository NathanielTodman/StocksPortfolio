@model StocksPortfolio.Models.TransactionDTO
@{
    ViewData["Title"] = "Quote";
    if (Model != null) {
        ViewData["Symbol"] = Model.Symbol;
        ViewData["Company"] = Model.Company;
    }
}
<div class="row">
    <div class="col-md-12">
        <div class="col-md-6 col-md-offset-3">
            @if (Model != null)
            {
                <p>Symbol: <b>@Model.Symbol</b></p>
                <p>Company Name: <b>@Model.Company</b></p>
                <br />
                <a asp-controller="Home" asp-action="Buy" asp-route-id="@Model.Symbol" class="btn btn-default buy">
                    Buy
                </a>
                <a asp-controller="Home" asp-action="Quote" class="btn btn-default">New Quote</a>
            }
            
        </div>
    </div>
    <div class="col-md-12" style="margin-top:20px">
        <!-- TradingView Widget BEGIN -->
        <div id="tv-medium-widget-5ede2" style="min-height:300px"></div>
        <script type="text/javascript" src="https://d33t3vvu2t2yu5.cloudfront.net/tv.js"></script>
        <script type="text/javascript">
            new TradingView.MediumWidget({
                "container_id": "tv-medium-widget-5ede2",
                "symbols": [
                  [
                    "@ViewData["Symbol"]",
                    "@ViewData["Symbol"]"
                  ]
                ],
                "gridLineColor": "#e9e9ea",
                "fontColor": "#83888D",
                "underLineColor": "#ffcd38",
                "trendLineColor": "#FF6238",
                "width": "100%",
                "height": "400px",
                "locale": "en"
            });
        </script>
        <!-- TradingView Widget END -->
    </div>
</div>