@model StocksPortfolio.ViewModels.RegisterModel
@{
    ViewData["Title"] = "Register";
}
@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<form asp-controller="Home" asp-action="Register" method="post" align="left">
    <fieldset>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Username">Username</label>
            <div class="col-10">
                <input autocomplete="off" autofocus class="form-control" asp-for="Username" type="text" />
                <span asp-validation-for="Username" class="text-muted"></span>
            </div>            
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="col-2 col-form-label">First Name</label>
            <div class="col-10">
                <input autocomplete="off" autofocus class="form-control" asp-for="FirstName" type="text" />
                <span asp-validation-for="FirstName" class="text-muted"></span>
            </div>        </div>
        <div class="form-group">
            <label asp-for="Surname" class="col-2 col-form-label">Surname</label>
            <div class="col-10">
                <input autocomplete="off" autofocus class="form-control" asp-for="Surname" type="text" />
                <span asp-validation-for="Surname" class="text-muted"></span>
            </div>        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-2 col-form-label">E-mail Address</label>
            <div class="col-10">
                <input autocomplete="off" autofocus class="form-control" asp-for="Email" type="email" />
                <span asp-validation-for="Email" class="text-muted"></span>
            </div>        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-2 col-form-label">Password</label>
            <div class="col-10">
                <input class="form-control" asp-for="Password" type="password" />
                <span asp-validation-for="Password" class="text-muted"></span>
            </div>        </div>
        <div class="form-group">
            <label asp-for="Password2" class="col-2 col-form-label">Re-type password</label>
            <div class="col-10">
                <input class="form-control" asp-for="Password2" type="password" />
                <span asp-validation-for="Password2" class="text-muted"></span>
            </div>        </div>
        <div class="form-group">
            <button class="btn btn-default" type="submit">Register</button>
        </div>
    </fieldset>
</form>