@model TransactionModel
@{
    ViewData["Title"] = "Buy";
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form method="post" align="left" asp-antiforgery="true">
            <fieldset>
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Symbol">Company Symbol</label>
                    <div>
                        <input autocomplete="off" autofocus class="form-control" asp-for="Symbol" type="text" />
                        <span asp-validation-for="Symbol" class="text-muted"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity">Quantity</label>
                    <div>
                        <input class="form-control" asp-for="Quantity" type="number" />
                        <span asp-validation-for="Quantity" class="text-muted"></span>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-default" type="submit">Buy</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
